<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/pokemon_solid</item>
        <item name="android:shadowColor">@color/colorAccent</item>
        <item name="android:shadowDx">1.6</item>
        <item name="android:shadowDy">1.9</item>
        <item name="android:shadowRadius">1.9</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:statusBarColor">#FF0000</item>
        <item name="actionBarTheme">@style/AppTheme</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

</resources>
